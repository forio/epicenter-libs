<article id="{{parent}}-{{name}}">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
    {{#if parameters}}
        <article class="parameters">
            <h4>Parameters</h4>
            <ul>
            {{#each parameters}}
                <li>
                    {{> param}}
                    {{description}}
                {{#if parameters}}
                    <dl className="sub-parameters">
                    {{#each parameters}}
                        <dt>
                            {{> param parent=../name}}
                        </dt>
                        <dd>{{description}}</dd>
                    {{/each}}
                    </dl>
                {{/if}}
                </li>
            {{/each}}
            </ul>
        </article>
    {{/if}}
    {{#if returns}}
        <article class="returns">
            <h4>Returns</h4>
            <code class="type">object</code>:
            your run
        </article>
    {{/if}}
    {{#if example}}
        <article class="example">
            <h4>Example</h4>
            <pre>
                <code>
                    const { runAdapter } = epicenter;
                    runAdapter.create('myModel.py', {
                        scopeBoundary: 'world',
                        scopeKey: '123214',
                        psuedenymKey: '2314',
                    });
                </code>
            </pre>
        </article>
    {{/if}}
</article>
