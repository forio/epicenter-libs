{
  "name": "epicenter-libs",
  "version": "3.33.0",
  "main": "dist/cjs/epicenter.js",
  "type": "module",
  "module": "dist/module/epicenter.js",
  "browser": "dist/browser/epicenter.js",
  "types": "dist/types/epicenter.d.ts",
  "files": [
    "dist/",
    "src/",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c -m",
    "build": "npm run build:clean && npm run build:types && npm run build:js",
    "build:test": "rollup -c rollup.config.test.js",
    "pretest": "npm run type-check && npm run build:test",
    "pretest:run": "npm run type-check && npm run build:test",
    "start": "rollup -c -m inline -w",
    "prepare": "node -e \"if (!process.env.CI && !process.env.JENKINS_HOME) require('child_process').execSync('husky', {stdio: 'inherit'})\""
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ]
    }
  },
  "dependencies": {
    "cometd": "^8.0.9",
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.0",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-class-properties": "^7.26.0",
    "@babel/plugin-transform-logical-assignment-operators": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.26.0",
    "@babel/plugin-transform-numeric-separator": "^7.26.0",
    "@babel/plugin-transform-optional-chaining": "^7.26.0",
    "@babel/plugin-transform-private-methods": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/cometd": "^4.0.8",
    "babel-loader": "^9.2.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-angular": "^8.0.0",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "regenerator-runtime": "^0.14.1",
    "rollup": "^4.31.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "sinon": "^21.0.0",
    "typedoc": "^0.28.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
