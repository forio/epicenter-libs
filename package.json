{
  "name": "epicenter-libs",
  "version": "3.1.0-alpha",
  "type": "module",
  "main": "dist/epicenter.js",
  "scripts": {
    "start": "npm run build-web:dev",
    "build": "npm run build-web:prod",
    "build-web": "npm run build-web:dev",
    "build-node": "npm run build-node:dev",
    "build-web:dev": "webpack --config webpack.web.dev.js",
    "build-web:prod": "webpack --config webpack.web.prod.js",
    "build-node:dev": "webpack --config webpack.node.dev.js",
    "build-node:prod": "webpack --config webpack.node.prod.js",
    "test": "karma start --browsers ChromeHeadless karma.conf.js",
    "single-test": "karma start --browsers ChromeHeadless karma.conf.js --single-run"
  },
  "pre-push": {
    "run": [
      "single-test"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "cometd": "^3.1.10",
    "cross-fetch": "^3.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.1.0",
    "karma": "^3.1.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "pre-push": "^0.1.1",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.39.2",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
