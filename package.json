{
  "name": "epicenter-libs",
  "version": "3.2.0-alpha",
  "type": "module",
  "main": "dist/epicenter.js",
  "scripts": {
    "start": "npm run build-web:dev",
    "build": "npm run build-web:prod",
    "build-web": "npm run build-web:dev",
    "build-node": "npm run build-node:dev",
    "build-web:dev": "webpack --config webpack.web.dev.cjs",
    "build-web:prod": "webpack --config webpack.web.prod.cjs",
    "build-node:dev": "webpack --config webpack.node.dev.cjs",
    "build-node:prod": "webpack --config webpack.node.prod.cjs",
    "test": "karma start --browsers ChromeHeadless karma.conf.cjs",
    "single-test": "karma start --browsers ChromeHeadless karma.conf.cjs --single-run",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pre-push": {
    "run": [
      "single-test"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "cometd": "^4.0.7",
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^6.1.0",
    "husky": "^4.3.0",
    "karma": "^3.1.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "pre-push": "^0.1.1",
    "rollup": "^2.33.3",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.5.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
